rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User's private data - only accessible by owner
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public share tokens - readable by anyone, writable by owner
    match /shares/{token} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Allow reading shared user data via share token lookup
    match /users/{userId}/items/{itemId} {
      allow read: if true; // Items can be read if you have the share link
    }
    match /users/{userId}/config/settings {
      allow read: if true; // Settings can be read for shared view
    }
  }
}
